<div class="page-content">
  <div class="content-block">

    <div class="row">
      <div class="col-45">
        <p class="buttons-row">
          <a href="#" class="button button-big button-fill button-raised color-orange ripple-green">최근 배송 가져오기</a>
        </p>
      </div>
      <div class="col-55">
        <div class="card card-load">
          <div class="card-content">
            <div class="card-content-inner card-content-inner-load">
              <div class="row">
                <div class="col-30">
                  <span>차량:</span>
                </div>
                <div class="col-70">
                  <span>{{basicInfo.car.license_number}}</span>
                </div>
              </div>
              <div class="row">
                <div class="col-30">
                  <span>기사:</span>
                </div>
                <div class="col-70">
                  <span>{{basicInfo.user.name}}</span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- /.row -->

  </div>
  <!-- /.content-block -->

  <div class="list-block">
    <ul>

      <li>
        <!-- Smart select, will be opened in Picker -->
        <a href="#" class="item-link smart-select" data-open-in="picker">
          <select name="load-item">
            <option value="0" >품목 선택</option>
            {{#items}}
            <option value="{{id}}">{{name}}</option>
            {{/items}}
          </select>
          <div calss="item-content">
            <div class="item-inner">
              <!-- Select label -->
              <div class="item-title">품목</div>
              <!-- Selected value, not required -->
              <div class="item-after smart-select-value">선택해주세요</div>
            </div>
          </div>
        </a>
      </li>

      <li>
        <!-- Smart select, will be opened in Picker -->
        <a href="#" class="item-link smart-select" data-open-in="picker">
          <select name="load-bay">
            <option value="0" >상차지 선택</option>
            {{#bays}}
            <option value="{{id}}">{{name}}</option>
            {{/bays}}
          </select>
          <div calss="item-content">
            <div class="item-inner">
              <!-- Select label -->
              <div class="item-title">상차지</div>
              <!-- Selected value, not required -->
              <div class="item-after smart-select-value">선택해주세요</div>
            </div>
          </div>
        </a>
      </li>

      <li>
        <!-- Smart select, will be opened in Picker -->
        <a href="#" class="item-link smart-select" data-open-in="picker">
          <select name="load-company">
            <option value="0" >발주사 선택</option>
            {{#companies}}
            <option value="{{id}}">{{name}}</option>
            {{/companies}}
          </select>
          <div calss="item-content">
            <div class="item-inner">
              <!-- Select label -->
              <div class="item-title">발주사</div>
              <!-- Selected value, not required -->
              <div class="item-after smart-select-value">{{basicInfo.user.company.name}}</div>
            </div>
          </div>
        </a>
      </li>

      <li>
        <div class="item-content">
          <div class="item-inner">
            <div class="item-title">메모</div>
            <div class="item-after">
              <input type="text" name="memo" placeholder="메모를 입력하세요">
            </div>
          </div>
        </div>
      </li>
    </ul>
  </div>
  <!-- /.list-block -->

  <div class="content-block">
    <div class="row">
      <div class="col-50">
        <p class="buttons-row">
          <a href="#" class="button button-big button-fill button-raised color-orange ripple-green load-init">
            <span>초기화</span>
          </a>
        </p>
      </div>
      <div class="col-50">
        <p class="buttons-row">
          <a href="#" class="button button-big button-fill button-raised color-orange ripple-green load-submit">
            <span>등록</span>
          </a>
        </p>
      </div>
    </div>
  </div>

</div>
<!-- /.page-content -->

